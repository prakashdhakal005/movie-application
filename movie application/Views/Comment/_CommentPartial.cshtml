@{
}
@model Tuple<string, List<movie_application.Models.Domain.Comment>>
<head>
    <style>
    body {
    font-family: Arial, sans-serif;
    background-color: #f4f4f4;
    margin: 0;
    padding: 0;
    }

    .ccontainer {
    max-width: 500px;
    margin: 5px 5px;
    background-color: #fff;
    padding: 10px;
    border-radius: 5px;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

    .comment {
    margin-bottom: 5px;
    padding: 3px;
    background-color: #f9f9f9;
    border-radius: 8px;
    box-shadow: 0 0 5px rgba(0, 0, 0, 0.1);
    }

    .username {
    font-size: 12px;
    font-weight: bold;
    color: #333;
    }

    .comment-text {
    margin-top: 1px;
    font-size: 16px;
    color: #555;
    }

    .post-date {
    margin-top: 1px;
    font-size: 14px;
    color: #777;
    }
    </style>

</head>
<body>
<div class="container comments-container" data-movie-title="@Model.Item1">
    <h5>Comments:</h5>

    @foreach (var movie in Model.Item2)
    {   <div class="ccontainer">
            <div class="comment">
                <div style="display: none;" id="movieid" class="username mt-3">@movie.ID</div>
                 <h5 style="display: none;" class="mt-3">@movie.MovieTitle</h5>

                 <div class="username">User:@movie.username</div>
                 <div class="comment-text justified-paragraph">@movie.text</div>
                 <div class="post-date">Comment Posted on: @movie.commentDate.ToShortDateString()</div>




                 
             </div>
       </div>
    }
    

   
    
    

      

</div>
</body>